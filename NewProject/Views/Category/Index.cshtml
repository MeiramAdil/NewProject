@model IEnumerable<Category>
@{
}
<html>
<body>
    <h2>All categories</h2>
    <table>
        <tr>
            <td>Category name</td>
            <td></td>
        </tr>
        @foreach (var c in Model)
        {
            <tr>
                <td><a asp-action="Update" asp-route-id="@c.Id"> @c.CategoryName</a></td>
                <td><a asp-action="ProductsByCategory" class="btn btn-outline" asp-route-id="@c.Id">Products</a></td>
                <td><a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@c.Id">Delete</a></td>
            </tr>
        }
    </table>
    <br />
    <br />
    <a asp-action="Add" class="btn btn-outline-danger">Add</a>

</body>
</html>