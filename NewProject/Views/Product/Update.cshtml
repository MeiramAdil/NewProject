@model Product
@{
}
<html>
    <body>
        <div>
            <h2>Изменение продукта</h2>
            <h4>Заполните форму</h4>
            <form method="post">
                <input type="hidden" value="@Model.Id" name="ProductId" />
                <table>
                    <tr>
                        <td>Product name</td>
                        <td><input type="text" name="Name" value="@Model.Name"/></td>
                    </tr>
                    <tr>
                        <td>Description</td>
                        <td><input type="text" name="Description" value="@Model.Description"/></td>
                    </tr>
                    <tr>
                        <td>Price</td>
                        <td><input type="text" name="Price" value="@Model.Price"/></td>
                    </tr> 
                    <tr>
                        <td>Category id</td>
                        <td><input type="text" name="CategoryId" value="@Model.CategoryId"/></td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" value="Изменить"/>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </body>
</html>